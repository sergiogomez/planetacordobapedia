<% form_for(@entry) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, t(:title) %><br />
    <%= f.text_field :title, :class => "input-text", :size => 100 %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url, :class => "input-text", :size => 100 %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :class => "input-text", :cols => 103, :rows => 5 %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => "input-text", :cols => 103, :rows => 10 %>
  </p>
  <p>
    <%= f.submit t(:save) %>
  </p>
<% end -%>
